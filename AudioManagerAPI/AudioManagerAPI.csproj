<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Authors>ioMatix</Authors>
    <Description>Shared audio management system for SCP:SL plugins using LabAPI speakers with ID isolation and caching.</Description>
    <!-- Target .NET Framework 4.8 -->
    <TargetFramework>net48</TargetFramework>
    <OutputType>Library</OutputType>

    <!-- Assembly identity -->
    <RootNamespace>AudioManagerAPI</RootNamespace>
    <AssemblyName>AudioManagerAPI</AssemblyName>

    <!-- Disable SDK’s auto‐generated AssemblyInfo → avoids duplicate [AssemblyFileVersion] -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    
    <!-- NuGet package on build -->
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IsPackable>true</IsPackable>
    <IncludeContentInPack>true</IncludeContentInPack>
    <PackageId>SCPSL-AudioManagerAPI</PackageId>
    <Version>1.0.0</Version>

    <!-- Windows RIDs for restore/pack -->
    <RuntimeIdentifiers>win;win-x64;win-x86</RuntimeIdentifiers>

    <!-- License & Readme -->
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="LICENSE" />
    <None Remove="README.md" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="LICENSE">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <Pack>true</Pack>
      <PackagePath></PackagePath>
      <Visible>true</Visible>
    </EmbeddedResource>
    <EmbeddedResource Include="README.md">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <Pack>true</Pack>
      <PackagePath></PackagePath>
      <Visible>true</Visible>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <!-- .NET Framework references -->
    <Reference Include="System" />
    <Reference Include="System.Core" />
    <Reference Include="System.Numerics" />
    <Reference Include="System.Xml.Linq" />
    <Reference Include="System.Data.DataSetExtensions" />
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Data" />
    <Reference Include="System.Net.Http" />
    <Reference Include="System.Xml" />

  </ItemGroup>

  <!-- 
    By default, all .cs files under the project folder are compiled.
  -->

</Project>
